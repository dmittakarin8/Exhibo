= form_for @talent do |f|
  -if @talent.errors.any?
    #error_explanation
      %h2= "#{pluralize(@talent.errors.count, "error")} prohibited this talent from being saved:"
      %ul
        - @talent.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :fname
    = f.text_field :fname
  .field
    = f.label :lname
    = f.text_field :lname
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :summary
    = f.text_field :summary
  .field
    = f.label :relocate
    = f.check_box :relocate
  .field
    = f.label :travel
    = f.text_field :travel
  .field
    = f.label :job_type
    = f.text_field :job_type
  .field
    = f.label :zip_code
    = f.text_field :zip_code
  .field
    = f.label :zip_distance
    = f.text_field :zip_distance
  .actions
    = f.submit 'Save'
